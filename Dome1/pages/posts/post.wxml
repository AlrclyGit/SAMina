<view class="showme">
    <swiper indicator-dots="true" autoplay="true" interval="2000">
        <swiper-item>
          <image src="/images/swiper1.jpg"></image>
        </swiper-item>
        <swiper-item>
          <image src="/images/swiper2.gif"></image>
        </swiper-item>
        <swiper-item>
          <image src="/images/swiper3.gif"></image>
        </swiper-item>
    </swiper>

    <block wx:for="{{post_key}}" wx:for-item="item">
      <view class="post-container">
          <view class="post-author-date">
            <image class="post-author" src="{{item.post_img}}"></image>
            <text class="post-date">{{item.data}}</text>
          </view>
          <text class="post-title">{{item.title}}</text>
          <image class="post-image" src="{{item.author_img}}"></image>
          <text class="post-content">{{item.content}}</text>
          <view class="post-like">
              <image class="post-like-image" src="/images/xjj.png"></image>
              <text class="post-like-font">{{item.collect_num}}</text>
              <image class="post-like-image" src="/images/xjj.png"></image>
              <text class="post-like-font">{{item.view_num}}</text>
          </view>
      </view>
    </block>
</view>
